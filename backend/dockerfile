FROM node:20-alpine

WORKDIR /app

# Copier les fichiers de dépendances
COPY package*.json ./

# IMPORTANT: Utiliser "npm install" au lieu de "npm ci"
# Cela installe toutes les dépendances y compris multer
RUN npm install --omit=dev

# Copier le code source
COPY src/ ./src/

# Exposer le port de l'API
EXPOSE 4000

# Démarrer l'application
CMD ["node", "src/index.js"]